# App
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# WebSocket Server
WS_SERVER_URL=ws://localhost:8080
WS_API_KEY=development_api_key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/editmash

# Redis
REDIS_URL=redis://localhost:6379

# Auth (Better Auth)
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your_super_secret_random_string
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000

# Google Auth
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Add redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# B2 download base URL for direct file access (e.g., https://f005.backblazeb2.com)
# Get this from your B2 bucket settings
NEXT_PUBLIC_B2_DOWNLOAD_URL=

# Backblaze B2 (Storage)
B2_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=your_b2_bucket_name
B2_BUCKET_ID=your_b2_bucket_id